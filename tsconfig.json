{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": false,
    "sourceMap": false,
    "inlineSources": false,
    "removeComments": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "strictNullChecks": false,
    "types": ["jest", "node"],
    "strictPropertyInitialization": false,
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
